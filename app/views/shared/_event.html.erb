<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <%= link_to user_path(event.user) do %>
          <%= user_avatar(event.user, size: :small) %>
        <% end %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p><%= event_text(event) %>

        <p>
          <span class="has-text-muted" title="<%= event.created_at %>">
            <%= "#{distance_of_time_in_words(event.created_at, Time.now)} ago" %>
          </span>
          <% if EventPolicy.new(current_user, event.subclass).destroy? %>
            <%= link_to event_path(event.id),
              data: { confirm: "Are you sure you want to delete this event?" },
              method: :delete, class: 'ml-5' do %>
              <%= svg_icon('trash', css_class: 'has-fill-danger-hoverable', title: 'Delete', options: { style: 'vertical-align: text-top;' }) %>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </article>
</div>
