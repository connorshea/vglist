<% content_for :title, "Series" %>
<% content_for :description, "All game series' available on vglist." %>

<h1 class="title">Series</h1>

<% if policy(@series).create? %>
  <p><%= link_to("Create a new series", new_series_path, class: 'button is-fullwidth-mobile mb-10') %></p>
<% end %>

<ul>
  <% @series.each do |series| %>
    <li><%= link_to(series.name, series_path(series.id)) %></li>
  <% end %>
</ul>

<%= paginate @series %>
