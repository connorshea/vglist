<% content_for :title, "Companies" %>
<% content_for :description, "All game developers and publishers available on vglist." %>

<h1 class="title">Companies</h1>

<% if policy(@companies).create? %>
  <p><%= link_to("Create a new company", new_company_path, class: 'button is-fullwidth-mobile mb-10') %></p>
<% end %>

<ul>
  <% @companies.each do |company| %>
    <li><%= link_to(company.name, company_path(company.id)) %></li>
  <% end %>
</ul>

<%= paginate @companies %>
