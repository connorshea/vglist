{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "module": "esNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "esNext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false,
  "typeAcquisition": {
    "enable": true
  },
  "vueCompilerOptions": {
    "target": 2.7,
    "extensions": [".vue"]
  }
}
