# Development Dockerfile
FROM ruby:3.4.5

# Install system dependencies
RUN apt-get update -qq && apt-get install -y \
    build-essential \
    libpq-dev \
    nodejs \
    npm \
    imagemagick \
    postgresql-client \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Update CA certificates to fix SSL issues
RUN update-ca-certificates

# Install Node.js 16.x
RUN curl -fsSL https://deb.nodesource.com/setup_16.x | bash - \
    && apt-get install -y nodejs

# Install Yarn using npm with SSL configuration
RUN npm config set strict-ssl false && \
    npm install -g yarn && \
    npm config delete strict-ssl

# Set working directory
WORKDIR /app

# Configure RubyGems and Bundler for development environment
ENV SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt
RUN bundle config --global timeout 300 && \
    bundle config --global retry 3

# Copy dependency files (dependencies will be installed at runtime)
COPY Gemfile Gemfile.lock package.json yarn.lock ./

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Default command
CMD ["rails", "server", "-b", "0.0.0.0"]